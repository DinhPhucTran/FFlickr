<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/colorDarkCardBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorDarkCardBackground">

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:id="@+id/commentProfileImage"
                android:scaleType="centerCrop"
                app:riv_corner_radius="30dp"
                app:riv_mutate_background="true"
                app:riv_tile_mode="repeat"
                app:riv_oval="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/commentProfileImage"
                android:id="@+id/commentUserName"
                android:text="DinhPhuc"
                android:textColor="@android:color/white"
                android:textSize="17dp"
                android:layout_toLeftOf="@+id/commentTime"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/commentProfileImage"
                android:layout_below="@id/commentUserName"
                android:id="@+id/commentContent"
                android:text="Hello!"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:text="1 hour ago"
                android:textColor="@android:color/white"
                android:id="@+id/commentTime"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>